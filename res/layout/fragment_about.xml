<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="40dp" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/moonstar"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/aboutText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:text="Prayer Times v1.0\n\n\u00A9 2014 - Aryo Pinandito\nPTIIK Universitas Brawijaya."
        tools:ignore="HardcodedText,UnusedAttribute" />

    <LinearLayout
        android:id="@+id/aboutSupportsContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="67dp"
            android:layout_height="71dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:src="@drawable/logo_labmobile"
            tools:ignore="ContentDescription" />

        <ImageView
            android:layout_width="162dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginTop="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/logo_ptiik"
            tools:ignore="ContentDescription" />

    </LinearLayout>

</LinearLayout>